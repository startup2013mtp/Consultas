<form class="form-horizontal" method="POST" action="@Url.Action("enviaDadosContato")" enctype="multipart/form-data">
    <div class="page-header">
        <h1>Contato</h1>
    </div>       
    <div class="form-group">
        <label for="txtNome" class="col-lg-2 control-label">Digite seu nome:</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" name="txtNome" id="txtNome" placeholder="Nome.." required=""/>
        </div>
    </div>
    <div class="form-group">
        <label for="txtEmail" class="col-lg-2 control-label">Digite seu email:</label>
        <div class="col-lg-6">
            <input type="email" class="form-control" name="txtEmail" id="txtEmail" placeholder="Email.." required="">
        </div>
    </div>
    <div class="form-group">
        <label for="selectEstado" class="col-lg-2 control-label">Estado:</label>
        <div class="col-lg-10">
            <select class="form-control" id="slcEstado">
                <option>Minas Gerais</option>
                <option>São Paulo</option>
                <option>Rio de Janeiro</option>
            </select>
        </div>
    </div>   
    <div class="form-group">
        <label for="txtMensagem" class="col-lg-2 control-label">Mensagem:</label>
        <div class="col-lg-10">
            <textarea name="txtMsg" class="form-control" id="txtMensagem" placeholder="Mensagem..." required="" rows="8"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="txtArquivo" class="col-lg-2 control-label">Arquivo:</label>
        <div class="col-lg-5"style="margin-top: 6px;" >
            <input type="file"  />
        </div>
    </div>
    <div class="form-group">
        <label for="selectEstado" class="col-lg-2 control-label"></label>
        <div class="col-lg-10">
            <input type="submit" value="Enviar" class="btn btn-success"/>
            <div class="btn btn-danger">Cancelar</div>
        </div>
    </div>
</form>